<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sms">


    <Button
        android:id="@+id/guideDetailsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="300dp"
        android:text="Want Guide Details?" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="enter_phone_number"
        android:id="@+id/phonenum"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="enter_the_message"
        android:id="@+id/smss"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:id="@+id/smsbutton"
        android:textAllCaps="false"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="120dp"
        android:text="contact to local guide"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:id="@+id/mapshow"
        android:textSize="25sp"
        android:textAllCaps="false"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="120dp"
        android:text="Navigate Map"/>



</LinearLayout>